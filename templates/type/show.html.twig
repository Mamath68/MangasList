{% extends 'base.html.twig' %}

{% block title %}
	Les
	{{type.libelle}}

{% endblock %}

{% block body %}
	<h1>Les
		{{type.libelle}}</h1>

	<div class="container text-center">
		<div class="row">
			{% for livre in type.livres %}
				<div class="col-md col-12">
					<figure>
						<blockquote class="blockquote">
							<picture>
								{% if livre.img is defined %}
									<img src="{{asset('img/' ~ livre.img)}}" class="img-fluid img-thumbnail rounded" alt="{{livre.types.libelle}}">
								{% endif %}
							</picture>
						</blockquote>
						<figcaption class="blockquote-footer">
							<cite title="Source Title">
								<a class="link-primary" href="{{ path('app_livre_show', {'nom': livre.nom, 'libelle' : type.libelle}) }}">{{livre.nom}}</a>

							</cite>
						</figcaption>
					</figure>
				</div>
			{% else %}
				<div class="col-md col-12">
					<h5>
						Pas De Type enregistr√©
					</h5>
				</div>
			{% endfor %}
		</div>
	</div>

	<a class="btn btn-primary" href="{{ path('app_livre_index') }}">Retour</a>

{% endblock %}
